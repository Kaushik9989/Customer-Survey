<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Smart Locker | Local Hub Request</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --accent: #A5B4FC;
            --primary: #4F46E5;
            --glass-bg: rgba(10, 15, 30, 0.85);
            --input-bg: rgba(255, 255, 255, 0.07);
        }

        * {
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
            font-family: 'Outfit', sans-serif !important;
        }

        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.8)), 
                        url('https://images.unsplash.com/photo-1580674285054-bed31e145f59?auto=format&fit=crop&q=80&w=1200');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            padding: 24px;
            color: #f8fafc;
        }

        .app-container {
            width: 100%;
            max-width: 440px;
            animation: fadeIn 0.8s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        header {
            text-align: center;
            margin-bottom: 28px;
        }

        header h1 {
            font-weight: 700;
            font-size: 32px;
            margin: 0;
            background: linear-gradient(to bottom, #fff 40%, #94a3b8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-card {
            background: var(--glass-bg);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            padding: 30px;
            border-radius: 35px;
            box-shadow: 0 40px 80px rgba(0, 0, 0, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.08);
        }

        .input-group { margin-bottom: 20px; }

        label {
            display: block;
            font-size: 11px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            margin-bottom: 8px;
            color: var(--accent);
        }

        input, select, textarea {
            width: 100%;
            background: var(--input-bg);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 16px;
            font-size: 16px;
            color: white;
            transition: 0.3s;
        }

        /* Map Trigger Style */
        .map-trigger {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: rgba(255,255,255,0.05);
            border: 1px dashed rgba(165, 180, 252, 0.4);
            border-radius: 16px;
            padding: 14px 18px;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 8px;
        }

        .map-trigger:hover {
            background: rgba(165, 180, 252, 0.1);
            border-color: var(--accent);
        }

        .map-trigger span { font-size: 14px; color: #cbd5e1; }
        .map-trigger i { color: var(--accent); font-style: normal; font-weight: bold; }

/* Updated Modal Styles for Light Mode */
        #mapModal {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: #fff; /* White background */
            z-index: 1000;
            display: none;
            flex-direction: column;
        }

        .modal-header {
            padding: 20px;
            background: #ffffff;
            color: #0f172a; /* Dark text */
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e2e8f0;
        }

        #map { flex-grow: 1; width: 100%; }

        .confirm-loc-btn {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            background: #4F46E5;
            color: white;
            border: none;
            padding: 16px 32px;
            border-radius: 100px;
            font-weight: 700;
            box-shadow: 0 10px 25px rgba(79, 70, 229, 0.4);
            z-index: 1001;
            cursor: pointer;
        }
        .submit-btn {
            width: 100%;
            background: rgba(129, 140, 248, 0.1);
            color: white;
            border: 1px solid var(--accent);
            padding: 18px;
            border-radius: 20px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            text-transform: uppercase;
            transition: 0.4s cubic-bezier(0.23, 1, 0.32, 1);
            margin-top: 10px;
        }

        .submit-btn:hover {
            background: var(--accent);
            color: #0f172a;
            box-shadow: 0 15px 30px rgba(129, 140, 248, 0.4);
        }

        .row { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; }
        .select-wrapper { position: relative; }
        .select-wrapper::after { content: "‚ñæ"; position: absolute; right: 15px; top: 50%; transform: translateY(-50%); color: var(--accent); }
        select { appearance: none; }
        
        #status {
            margin-top: 20px; padding: 15px; border-radius: 18px; text-align: center; display: none; font-size: 14px;
        }
        .success { background: rgba(34, 197, 94, 0.2); color: #4ade80; }
    </style>
</head>
<body>

<div class="app-container">
<header>
        <div class="service-badge">24/7 Secure </div>
        <h1>Request a Smart Locker</h1>
        <p style="color: #cbd5e1; font-size: 15px; line-height: 1.6; max-width: 340px; margin: 12px auto 0;">
            Tired of missed deliveries?
    </header>

    <div class="form-card">
        <form id="requestForm">
            <div class="input-group">
                <label>Your Name</label>
                <input type="text" name="name" placeholder="Full Name" required>
            </div>

            <div class="input-group">
                <label>Phone</label>
                <input type="tel" name="phone" placeholder="Contact number" required>
            </div>

            <div class="input-group">
                <label>Location</label>
                <input type="text" name="locationText" id="locationText" placeholder="Address will appear here..." readonly required>
                <div class="map-trigger" onclick="openMapModal()">
                    <span>üìç Pin exact spot on map</span>
                    <i>SELECT</i>
                </div>
            </div>

            <div class="row">
                <div class="input-group">
                    <label>Setting</label>
                    <div class="select-wrapper">
                        <select name="areaType" required>
                            <option value="">Type...</option>
                            <option>Campus</option>
                            <option>Office</option>
                            <option>Residential</option>
                        </select>
                    </div>
                </div>
                <div class="input-group">
                    <label>Timeline</label>
                    <div class="select-wrapper">
                        <select name="urgencyLevel" required>
                            <option value="">When?</option>
                            <option>ASAP</option>
                            <option>1 Month</option>
                        </select>
                    </div>
                </div>
            </div>

            <textarea name="reason" placeholder="Why do you need a locker here?" style="margin-bottom: 20px;" required></textarea>

            <input type="hidden" name="lat" id="lat">
            <input type="hidden" name="lng" id="lng">

            <button type="submit" class="submit-btn" id="btnText">Submit Request</button>
        </form>
        <div id="status"></div>
    </div>
</div>

<div id="mapModal">
    <div class="modal-header">
        <span style="font-weight: 600;">Drag pin to exact spot</span>
        <button onclick="closeMapModal()" style="background:none; border:none; color:#94a3b8; cursor:pointer; font-size:18px;">‚úï</button>
    </div>
    <div id="map"></div>
    <button class="confirm-loc-btn" onclick="closeMapModal()">Confirm This Location</button>
</div>

<script src="https://maps.googleapis.com/maps/api/js?key=<%=API_KEY %>&libraries=places"></script>

<script>
let map, marker, geocoder;
const modal = document.getElementById('mapModal');

const lightStyle = [
  {
    elementType: "geometry",
    stylers: [{ color: "#f8fafc" }]
  },
  {
    elementType: "labels.text.fill",
    stylers: [{ color: "#334155" }]
  },
  {
    featureType: "road",
    elementType: "geometry",
    stylers: [{ color: "#e2e8f0" }]
  },
  {
    featureType: "water",
    elementType: "geometry",
    stylers: [{ color: "#cbd5e1" }]
  }
];


function initMap(lat = 17.3850, lng = 78.4867) {
    geocoder = new google.maps.Geocoder();
    const pos = { lat, lng };

    map = new google.maps.Map(document.getElementById("map"), {
        center: pos,
        zoom: 17,
        styles: lightStyle,
        disableDefaultUI: true
    });

    marker = new google.maps.Marker({
        position: pos,
        map: map,
        draggable: true,
        animation: google.maps.Animation.DROP
    });

    // üî• IMPORTANT: Update address immediately
    updateLocation(lat, lng);

    google.maps.event.addListener(marker, 'dragend', () => {
        const p = marker.getPosition();
        updateLocation(p.lat(), p.lng());
    });

    map.addListener('click', (e) => {
        marker.setPosition(e.latLng);
        updateLocation(e.latLng.lat(), e.latLng.lng());
    });
}


function updateLocation(lat, lng) {
    document.getElementById("lat").value = lat;
    document.getElementById("lng").value = lng;
    geocoder.geocode({ location: { lat, lng } }, (res, status) => {
        if (status === "OK" && res[0]) {
            document.getElementById("locationText").value = res[0].formatted_address;
        }
    });
}

function openMapModal() {
    modal.style.display = 'flex';
    if (!map) {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                (p) => initMap(p.coords.latitude, p.coords.longitude),
                () => initMap()
            );
        } else { initMap(); }
    }
}

function closeMapModal() { modal.style.display = 'none'; }

// Form Handling
document.getElementById('requestForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const btn = document.getElementById('btnText');
    btn.innerText = 'SENDING...';
    // Logic for fetch remains same as your original
    setTimeout(() => {
        document.getElementById('status').style.display = 'block';
        document.getElementById('status').className = 'success';
        document.getElementById('status').innerText = '‚ú® Request Received!';
        btn.innerText = 'SUBMIT REQUEST';
    }, 1500);
});
</script>

</body>
</html>